{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "App.js",
    "index.js"
  ],
  "exclude": [
    "node_modules",
    "backend/**/*",
    "admin-panel/**/*"
  ],
  "extends": "expo/tsconfig.base"
}
